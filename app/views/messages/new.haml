#facebox_window
  -remote_form_for [@user, @message], :loading => loading_js, :loaded => loaded_js do |f|
    =hidden_field_tag :from_message_id, params[:from_message_id]
    %p==发消息给#{@user.login}
    - if @last_message
      %p==上一消息：#{@last_message.content}
    %p
      =image_tag(@user.head, :class => "head") 
      = f.text_area :content, :rows => 2, :is_focus => true
      %span.quiet==发送消息将花费积分:#{SEND_MSG_SCORE}分
    %p
      = submit_tag '提交', :class => "button", :id => 'submit_btn'
      = submit_tag '取消', :class => "button", :onclick => "j(document).trigger('close.facebox');return false;"
