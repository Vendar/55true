#get_question
  -form_for :answer, :url => answers_path do |f|
    = hidden_field_tag 'previou_question', @unanswer_question.id
    .clearfix
    =image_tag(@unanswer_question.user.head, :class => "head") 
    %a= @unanswer_question.user.login
    %span= @unanswer_question.content
    %span.quiet= time_ago_in_words(@unanswer_question.created_at)
    .clearfix
    =image_tag(current_user.head, :class => "head") 
    = f.text_area :content, :rows => 3, :is_focus => true
    = text_area_tag 'question[content]', @question?@question[:content]:nil, :class => "question"
    .clearfix
    #time_warning
      请在
      %span#time_remain{:max_answer_time=>MAX_ANSWER_TIME}= MAX_ANSWER_TIME
      秒内提交，方便其他人接题
    .clearfix
    = submit_tag '提交', :class => "button"
  
